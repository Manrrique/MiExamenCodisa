@model EXAMEN.Models.Empleado

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @{ 
        EXAMEN.Clases.Metodos metodos = new();
    }
    <h4>Detalle Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cedula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cedula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class="col-sm-2">
            Edad
        </dt>
        <dd class="col-sm-10">
            @metodos.CalcularEdad((DateTime)Model.FechaNacimiento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>

        <dt class="col-sm-2">
            Años Laborando
        </dt>
        <dd class="col-sm-10">
            @metodos.CalcularEdad((DateTime)Model.FechaIngreso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.Foto)*@
            <img width="200" class="img-responsive full-width" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Foto)" />
        </dd>
        <dt class="col-sm-2">
            Area
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdAreaNavigation.Nombre)
        </dd>
        <dt class="col-sm-2">
            Jefe:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdJefeNavigation.NombreCompleto)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdEmpleado">Editar</a> |
    <a asp-action="Index">Volver al listado</a>
</div>
