@model EXAMEN.Models.Empleado_Habilidad

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Editar Habilidad de @ViewBag.IdEmpleado.NombreCompleto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdHabilidad" />
            <div class="form-group">
                <input type="hidden" name="IdEmpleado" value="@ViewBag.IdEmpleado.IdEmpleado" />
            </div>
            <div class="form-group">
                <label asp-for="NombreHabilidad" class="control-label"></label>
                <select asp-for="NombreHabilidad" class="form-control">
                    <option value="SQL Server">SQL Server</option>
                    <option value="C#">C#</option>
                    <option value="MVC">MVC</option>
                    <option value=".Net Core">.Net Core</option>
                    <option value="JavaScript">JavaScript</option>
                </select>
                <span asp-validation-for="NombreHabilidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

